<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context=".view.activity.login.RegisterActivity">
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_register_pnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_login"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_register_pnumber"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="+86"
            android:textColor="#353535"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/edittext_login"
            android:hint="输入验证码"
            android:inputType="number"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_register_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="验证码: "
            android:textColor="#353535"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_getSmsCode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/et_register_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:text="获取验证码"
            android:textColor="#353535"
            android:textSize="16sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_enable_green"
        android:enabled="true"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="一键手机注册"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</LinearLayout>

